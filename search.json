---
layout: null
permalink: /search.json
---
[
  {% assign pages = site.posts | concat: site.portfolio %}
  {% for page in pages %}
  {
    "title": {{ page.title | jsonify }},
    "url": {{ page.url | absolute_url | jsonify }},
    "date": {{ page.date | date: "%Y-%m-%d" | jsonify }},
    "categories": {{ page.categories | jsonify }},
    "excerpt": {{ page.excerpt | strip_html | normalize_whitespace | truncate: 200 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
